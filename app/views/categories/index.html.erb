<h1 class="subtitle is-2 has-text-centered my-1">Categorias</h1>
<div class="columns">
    <div class="column"></div>
    <div class="column is-half">
        <i><%= link_to  "", new_category_path, class: "mdi mdi-plus-circle mdi-36px has-text-link" %></i>
        <table class="table is-fullwidth is-bordered">
            <thead text>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% @categorias.each do |categoria|%>
                <tr>
                    <td><%= categoria.nombre %></td>
                    <td><%= categoria.descripcion %></td>
                    <td><i><%= link_to "", edit_category_path(categoria), class: "mdi mdi-tooltip-edit mdi-36px has-text-success"%></i></td>
                    <td><i><%= link_to "", category_path(categoria), method: :delete, class: "mdi mdi-delete mdi-36px has-text-danger", data: {confirm: "¿Estás seguro de eliminar la categoria: #{categoria.nombre}?"}%></i></td>
                <% end %>
                </tr>
            </tbody>
        </table>
        <%= will_paginate @categorias, renderer: BulmaPagination::Rails, :previous_label => t("anterior"), :next_label => t("siguiente"), class: 'is-rounded is-centered' %>
    </div>    
    <div class="column"></div>
</div>

