<div class="columns">
    <div class="column"></div>
    <div class="column my-5 is-centered has-background-light">
        <%= form_for @producto do |f| %>
        <div class="field">
            <label class="label">Nombre</label>
            <div class="control">
                <%= f.text_field :nombre, autofocus: true, class: "input is-rounded", autocomplete: "nombre"%>
            </div>
        </div> 
        
        <div class="field">
            <label class="label">Descripción</label>
            <div class="control">
                <%= f.text_area :descripcion, autofocus: true, class: "input is-rounded", autocomplete: "descripcion"%>
            </div>
        </div>   

        <div class="field is-grouped">
            <div class="field">
                <label class="label">Marca</label>
                <div class="control">
                    <%= f.text_field :marca, autofocus: true, class: "input is-rounded", autocomplete: "marca"%>
                </div>
            </div> 

            <div class="field">
                <label class="label">Modelo</label>
                <div class="control">
                    <%= f.text_field :modelo, autofocus: true, class: "input is-rounded", autocomplete: "modelo"%>
                </div>
            </div>
        </div>
        
        <div class="field is-grouped">
            <div class="field">
                <label class="label">Existencia</label>
                <div class="control">
                    <%= f.number_field :existencia, autofocus: true, class: "input is-rounded", autocomplete: "existencia"%>
                </div>
            </div> 

            <div class="field">
                <label class="label">Precio</label>
                <div class="control">
                    <%= f.number_field :precio, autofocus: true, class: "input is-rounded", autocomplete: "precio"%>
                </div>
            </div> 
        </div>

        <div class="field is-grouped">
            <div>
                <label class="label">Categoria</label>
                <div class="select">
                <%= f.select :category_id,
                options_from_collection_for_select(
                @categorias, :id, :nombre, f.object.category_id), {:prompt => "Selecciona uno"}, {class: "select"}%>
                </div>
            </div>

            <div class="field">
                <label class="label">Proveedor</label>
                <div class="select">
                <%= f.select :supplier_id,
                options_from_collection_for_select(
                @proveedores, :id, :nombre, f.object.supplier_id), {:prompt => "Selecciona uno"}, {:class => "select"}%>
                </div>
            </div>
        </div>


        <!--<div class="control">
            <label class="label">Categoria</label>
            <%= collection_select(:product, :category_id, @categorias, :id, :nombre, {:prompt => 'Selecciona una categoria'}, {:class => "select" })%>
        </div>

        <div class="control">
            <label class="label">Proveedor</label>
            <%= collection_select(:product, :supplier_id, @proveedores, :id, :nombre, {:prompt => 'Selecciona un proveedor'}, {:class => "select" })%>
        </div>-->
        <hr>
        <div class="columns">
            <div class="column is-6-tablet is-offset-3-tablet">
                <div class="control">
                    <%= f.submit(@producto.new_record? ? "Crear" : "Actualizar", class: "button is-link is-fullwidth")%>
                </div><br>
                <div class="control">
                    <%= link_to "[ « regresar ]", products_path, class: "has-text-dark" %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>
