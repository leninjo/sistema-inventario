<h1 class="subtitle is-2 has-text-centered my-1">Productos</h1>
<div class="columns">
    <div class="column"></div>
    <div class="column is-four-fifths">
        <i><%= link_to  "", new_product_path, class: "mdi mdi-plus-circle mdi-36px has-text-link" %></i>
        <table class="table is-fullwidth is-bordered">
            <thead text>
                <tr>   
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Exitencia</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Proveedor</th>
                    <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% @productos.each do |producto|%>
                <tr>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.descripcion %></td>
                    <td><%= producto.marca %></td>
                    <td><%= producto.modelo %></td>
                    <td><%= producto.existencia %></td>
                    <td><%= producto.precio %></td>
                    <td><%= producto.category != nil ? producto.category.nombre : "No tiene categoria"%></td>
                    <td><%= producto.supplier != nil ? producto.supplier.nombre : "No tiene proveedor"%></td>
                    <td><i><%= link_to "", edit_product_path(producto), class: "mdi mdi-tooltip-edit mdi-36px has-text-success"%></i></td>        
                    <td><i><%= link_to "", product_path(producto), method: :delete, class: "mdi mdi-delete mdi-36px has-text-danger", data: {confirm: "¿Estás seguro de eliminar el producto: #{producto.nombre}?"}%></i></td>
                <% end %>
                </tr>
            </tbody>
        </table>
        <%= will_paginate @productos, renderer: BulmaPagination::Rails, :previous_label => t("anterior"), :next_label => t("siguiente"), class: 'is-rounded is-centered' %>
    </div>    
    <div class="column"></div>
</div>

