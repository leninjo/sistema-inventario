<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label for="" class="label">Correo</label>
    <%= f.email_field :email, autofocus: true, class: "input", autocomplete: "email" %>
  </div>

  <div class="field">
    <label for="" class="label">Contraseña</label>
    <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
  </div>

  <!--<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->
  <br>
  <div class="actions">
    <%= f.submit "Iniciar Sesión", class: "button is-primary is-rounded is-outlined" %>
  </div>
  <hr>
<% end %>

<%= render "devise/shared/links" %>
